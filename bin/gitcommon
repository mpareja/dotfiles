stageUncommittedChanges() {
	if [ "`git status --porcelain`" != "" ]; then
		quitely git add -A
		quitely git stash
		if [ $? -eq 0 ]; then
			StashedChanged=1
		else
			echo
			echo 'FAIL: unable to stash changes.'
			return 1
		fi
	fi
}

cleanup() {
	if [ $StashedChanged -eq 1 ]; then
		quitely git stash pop
		if [ $? -eq 0 ]; then
			quitely git reset
			git status
		else
			echo
			echo 'FAILED: unable to pop your stash!'
			return 1
		fi
	fi
}

getlatest () {
	git fetch
	if [ $? -eq 0 ]; then
		# rebase preserving feature branch merge commits
		git rebase -p @{upstream}
		if [ $? -ne 0 ]; then
			return 1
		fi
	else
		return 2
	fi
}

quitely() {
	msg=$($*)
	code=$?
	if [ $code -ne 0 ]; then
		echo $msg
	fi
	return $code
}

